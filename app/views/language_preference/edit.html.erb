<% content_for :question_title, t("views.language_preference.edit.title") %>

<h1><%= content_for(:question_title) %></h1>

<%= form_with model: @model, url: { action: :update }, data: { turbo: false }, local: true, method: "put", builder: Cfa::Styleguide::CfaFormBuilder do |f| %>
  <label for="language_preference_written"><%= t("views.language_preference.edit.language_preference_written_label") %></label>

  <%= f.cfa_select(
        :language_preference_written,
        t("views.language_preference.edit.language_preference_written_label"),
        dropdown_options,
      ) %>

  <%= f.cfa_select(
        :language_preference_spoken,
        t("views.language_preference.edit.language_preference_spoken_label"),
        dropdown_options,
      ) %>
  <%= f.submit t("general.continue"), class: "button button--primary" %>
<% end %>
