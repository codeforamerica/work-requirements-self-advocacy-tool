<% content_for :question_title, t("views.work_training.edit.title") %>

<h1 class="h2"><%= content_for(:question_title) %></h1>

<%= form_with model: @model, url: { action: :update }, data: { turbo: false }, local: true, method: "put", builder: Cfa::Styleguide::CfaFormBuilder do |f| %>
  <%= f.hidden_field :is_in_work_training, value: :unfilled %>

  <div class="question-with-follow-up">
    <div class="question-with-follow-up__question">
      <%= f.cfa_radio_set(:is_in_work_training, collection: [
        { value: :yes, label: t("general.affirmative"), input_html: { "data-follow-up": "#program-hours-and-name" }},
        { value: :no, label: t("general.negative") },
      ]) %>
    </div>

    <div class="question-with-follow-up__follow-up" id="program-hours-and-name">
      <hr class="spacing-above-0" />
      <%= f.cfa_input_field(
            :work_training_hours,
            t("views.work_training.edit.work_training_hours_label"),
            help_text: t("views.work_training.edit.work_training_hours_help_text")
          ) %>

      <%= f.cfa_input_field(
            :work_training_name,
            t("views.work_training.edit.work_training_name_label"),
            help_text: t("views.work_training.edit.work_training_name_help_text")
          ) %>
    </div>
  </div>

  <%= f.submit t("general.continue"), class: "button button--primary" %>
<% end %>

