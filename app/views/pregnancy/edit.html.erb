<% content_for :question_title, t("views.pregnancy.edit.title") %>

<h1 class="h2"><%= content_for(:question_title) %></h1>

<%= form_with model: @model, url: { action: :update }, data: { turbo: false }, local: true, method: "put", builder: Cfa::Styleguide::CfaFormBuilder do |f| %>
  <%= f.hidden_field :is_pregnant, value: :unfilled %>

  <div class="question-with-follow-up">
    <div class="question-with-follow-up__question">
      <%= f.cfa_radio_set(:is_pregnant, collection: [
        { value: :yes, label: t("general.affirmative"), input_html: { "data-follow-up": "#due-date" }},
        { value: :no, label: t("general.negative") },
      ]) %>
    </div>

    <div class="question-with-follow-up__follow-up" id="due-date">
      <hr class="spacing-above-0" />
      <%= f.cfa_date_select(
            :pregnancy_due_date,
            t("views.pregnancy.edit.pregnancy_due_date_label"),
            help_text: t("views.pregnancy.edit.pregnancy_due_date_help_text"),
            options: {
              start_year: Time.now.year,
              end_year: Time.now.year + 1,
            }
          ) %>
    </div>
  </div>

  <%= f.submit t("general.continue"), class: "button button--primary" %>
<% end %>

