<% name = "#{model_name}[#{column}]" %>
<%= form.button :submit, name: name, value: "yes", class: "button" do %>
  <i class="button__icon--left icon-check"></i><%= t("general.affirmative") %>
<% end %>
<%= form.button :submit, name: name, value: "no", class: "button" do %>
  <i class="button__icon--left icon-close"></i><%= t("general.negative") %>
<% end %>